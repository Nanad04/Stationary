<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Judul Aplikasi -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StatioPay Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

        <!-- Tambah Pesanan -->
        <LinearLayout
            android:id="@+id/btnAddTransaksi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#3E5879"
            android:padding="24dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/tambahproduk"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Pesanan"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Lihat Daftar Produk -->
        <LinearLayout
            android:id="@+id/btnProductList"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/btnAddTransaksi"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#3E5879"
            android:padding="24dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/lihatdaftarproduk"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Daftar Produk"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Lihat Laporan -->
        <LinearLayout
            android:id="@+id/btnLaporan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/btnProductList"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#3E5879"
            android:padding="24dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/lihatlaporan"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Laporan"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tombol About Us -->
<!--        <Button-->
<!--            android:id="@+id/btnAboutUs"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_below="@+id/btnLaporan"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:text="ABOUT US"-->
<!--            android:backgroundTint="@color/button_background_color"-->
<!--            android:textColor="@color/white"-->
<!--            android:layout_centerHorizontal="true" />-->

        <LinearLayout
            android:id="@+id/btnAboutUs"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/btnLaporan"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#3E5879"
            android:padding="24dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/aboutus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Tombol Logout -->
        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btnAboutUs"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/button_background_color"
            android:src="@drawable/out"
            android:contentDescription="Logout"
            android:scaleType="centerInside"
            app:tint="@color/white"
            android:padding="12dp" />


    </RelativeLayout>
</ScrollView>
